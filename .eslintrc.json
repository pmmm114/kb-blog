{
    "env": {
        "es6": true,
        "browser": true
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "ignoreComments": true
    },
    "rules": {
        "max-len": "off",
        "no-console" : "off",
        "import/extensions": [
            "error",
            "ignorePackages",
            {
              "js": "never",
              "jsx": "never",
              "ts": "never",
              "tsx": "never"
            }
        ]
    },
    "extends": "airbnb",
    "parser": "@typescript-eslint/parser"
}